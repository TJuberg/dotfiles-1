##!/usr/bin/env bash

#~/bin/cvim_server.py &

xfsettingsd
xrdb -merge ~/.Xresources
setxkbmap -option 'caps:ctrl_modifier'
xcape -t 250 -e 'Caps_Lock=Escape'

xfce4-panel -d &
compton &
sxhkd -c ~/.config/sxhkd/sxhkdrc &
lght-locker &

xfce4-power-manager
nm-applet &
skype &
shutter --min_at_startup &
insync start
hp-systray &

exec bspwm
